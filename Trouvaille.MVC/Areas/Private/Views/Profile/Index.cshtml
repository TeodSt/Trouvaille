@model Trouvaille.Server.Models.UserViewModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="jumbotron">
    <div class="row">
        <div class="col-md-3">
            <img width="150" src=@Model.ImagePath class="rounded-circle" />
        </div>
        <div class="col-md-4">
            <p>@Model.UserName</p>
            @*<p>
                <button class="btn btn-cloud">Follow</button>
            </p>*@
        </div>
    </div>
    <div class="row">
        <div class="col offset-2">
            <ul class="nav nav-tabs md-pills pills-ins" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#panel11" role="tab"><i class="fa fa-user"></i> Personal info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#panel12" role="tab"><i class="fa fa-heart"></i> Followers</a>
                </li>
                <li class="nav-item">
                    @Ajax.ActionLink("Articles", "CreateArticle", new { controller = "profile" },
                       new AjaxOptions
                       {
                           UpdateTargetId = "profile-container",
                           HttpMethod = "GET",
                           InsertionMode = InsertionMode.Replace
                       }, new { @class = "nav-link", data_toggle = "tab" })
                </li>
               
                <li class="nav-item">
                    @Ajax.ActionLink("Photos", "UploadPicture", new { controller = "profile" },
                       new AjaxOptions
                       {
                           UpdateTargetId = "profile-container",
                           HttpMethod = "GET",
                           InsertionMode = InsertionMode.Replace
                       }, new { @class = "nav-link", data_toggle = "tab" })
                </li>    
                <li class="nav-item">
                    @Ajax.ActionLink("Trouvaille", "Place", new { controller = "profile"},
                       new AjaxOptions
                       {
                           UpdateTargetId = "profile-container",
                           HttpMethod = "GET",
                           InsertionMode = InsertionMode.Replace
                       }, new { @class = "nav-link", data_toggle = "tab" })
                </li>
            </ul>
        </div>
        <div id="profile-container" class="col-md-12"></div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
