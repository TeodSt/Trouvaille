@model IEnumerable<UserViewModel>

@{
    ViewBag.Title = "Users";
}

<table class="table table-bordered table-responsive">
    <tr>
        <td>Id</td>
        <td>Username</td>
        <td>First name</td>
        <td>Last name</td>
        <td></td>
    </tr>
    @foreach (var user in Model)
            {
        <tr>
            <td>@user.Id</td>
            <td>
                @Html.ActionLink(user.UserName, "ById", new { controller = "user", area = "", id = user.Id }, new { })
            </td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>
                @Ajax.ActionLink("Delete", "DeleteUser", new { controller = "panel", area = "admin", id = user.Id },
                       new AjaxOptions
                       {
                           UpdateTargetId = "admin-container",
                           HttpMethod = "POST",
                           InsertionMode = InsertionMode.Replace
                       }, new { @class = "btn btn-danger btn-sm waves-effect" })
            </td>
        </tr>
    }
</table>