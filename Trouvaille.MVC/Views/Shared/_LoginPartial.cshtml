@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item btn-group">
            <a class="nav-link dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Hello, @User.Identity.GetUserName()!
                <img src="http://i570.photobucket.com/albums/ss145/TJStepp99/BatmanUnicorn.jpg" alt="..." class="rounded-circle" width="30px"></a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                @Html.ActionLink("Home", "Index", new { controller = "profile", area = "private" }, new { @class = "nav-link" })
                @Html.ActionLink("Manage your account", "Index", new { controller = "manage", area = "" }, new { title = "Manage", @class = "dropdown-item nav-link" })
                <div class="dropdown-divider"></div>
                <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-item dropdown-item">Log off</a>
            </div>
        </li>
    </ul>
    <div style="display: none;">
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
            <input id="mySubmit" type="submit" value="LogOff" class="btn btn-default navbar-btn" />
        }
    </div>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <form class="form-inline waves-effect waves-light">
                <input class="form-control" type="text" placeholder="Search">
            </form>
        </li>
        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}
