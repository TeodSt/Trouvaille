@model Trouvaille.Server.Models.Users.UserProfileViewModel

@if (Model.Articles.Any())
{
    <div class="divider-new">
        <h2 class="h2-responsive wow fadeInUp">Articles</h2>
    </div>

    foreach (var article in Model.Articles)
    {
        <div class="media mb-1">
            <a class="media-left waves-light">
                <img class="img-thumbnail" width="180" src="@article.ImagePath" alt=@article.ImagePath>
            </a>
            <div class="media-body">
                <h4 class="media-heading">
                    @Html.ActionLink(@article.Title, "ById", new { controller = "Article", area = "", id = @article.Id })
                </h4>
                <p>@article.Subheader</p>
                <p>@article.CountryName</p>
            </div>
        </div>
    }
}

@if (Model.Pictures.Any())
{
    <div class="divider-new">
        <h2 class="h2-responsive wow fadeInUp">Pictures</h2>
    </div>

    foreach (var picture in Model.Pictures)
    {
        <div class="media mb-1">
            <a class="media-left waves-light">
                <img class="img-thumbnail" width="180" src="@picture.ImagePath" alt=@picture.ImagePath>
            </a>
            <div class="media-body">
                <h4 class="media-heading">
                    @picture.Description
                </h4>
                <p>@picture.CountryName</p>
            </div>
        </div>
    }
}