@model IEnumerable<Trouvaille.Server.Models.Articles.AddArticleViewModel>

@{
    ViewBag.Title = "Articles";
}

<div class="col-lg-8">
    @foreach (var article in Model)
    {
        @*@Html.ActionLink(@article.Title, "ById", "Article", new { id = @article.Id }, new { @class = "some-class" })
            <h1>@article.Title</h1>*@
        <!--Post-->
        <div class="post-wrapper">
            <h1 class="h1-responsive">@article.Title <small class="text-muted"></small></h1>
            <h5>Written by <a href="">@article.CreatorId</a>, 30.04.2016</h5>

            <br>
            <div class="view overlay hm-white-light z-depth-1-half">
                <img src="http://mdbootstrap.com/img/Photos/Slides/img%20(116).jpg" class="img-fluid " alt="">
                <div class="mask">
                </div>
            </div>
            <br>
            <p>@article.Subheader</p>
            @Html.ActionLink("Read more", "ById", "Article", new { id = @article.Id }, new { @class = "btn sunset-color" })
        </div>
        <hr>
    }
</div>

